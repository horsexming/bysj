<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bysj.dao.OrderMapper">
	 <select id="getBgoods" resultType="com.bysj.bean.Bgoods" parameterType="String">
	 	select* from bgoods where Gpicture = #{Gpicture}
	 </select>
	 
	 <select id="getBname" resultType="com.bysj.bean.Business" parameterType="String">
	 	select * from business where id in(select Business from bgoods where Gpicture=#{Gpicture}) 
	 </select>
	 
	 <insert id="addOrder" parameterType="com.bysj.bean.Orders">
	 	insert into orders(oname,oaddress,opicture,obusiness,ouser,onumber)
	 	values(#{oname},#{oaddress},#{opicture},#{obusiness},#{ouser},#{onumber})
	 </insert>
	<!--  查询订单信息根据用户名 -->
	 <select id="getorders_byusername" resultType="com.bysj.bean.Orders" parameterType="String">
	 	select* from orders where  ouser= #{username}
	 </select>
	 <!--  查询订单信息根据商家名 -->
	 <select id="getorders_bybusiness" resultType="com.bysj.bean.Orders" parameterType="String">
	 	select* from orders where obusiness= #{username}
	 </select>
</mapper>